<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button type="object"
                        class="oe_stat_button"
                        id="device_button"
                        icon="fa-car"
                        name="device_history"
                        context="{'default_partner_id': active_id}"
                        attrs="{'invisible':[('customer','=',False)]}"
                    >
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="total_device" />
                            </span>
                            <span class="o_stat_text">Dispositivos</span>
                        </div>
                    </button>
                </div>
            	<xpath expr="//form/sheet/div[2]" position="inside">
                    <h3>
                        <field name="doc_ident" placeholder="Documento de IdentificaciÃ³n"/>
                    </h3>
                </xpath>

                <xpath expr="//form/sheet/group/group" position="inside">
                    <field name="dgii_state"/>
                    <field name="pay_reg"/>
                    <field name="doc_ident_type"/>
                    <field name="partner_inv" invisible="1"/>
                </xpath>

                <xpath expr="//form/sheet/group/group[2]/field[2]" position="replace">
                    <field name="phone" placeholder="###-#######"/>
                </xpath>
            </field>
    	</record>

        <record id="view_res_partner_filter" model="ir.ui.view">
            <field name="name">res.partner.select.custom</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="phone"/>
                    <field name="doc_ident"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree.custom</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="doc_ident"/>
                </xpath>
            </field>
        </record>

        <record id="invoice_line_custom_search" model="ir.ui.view">
            <field name="name">invoice.line.custom.search</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
                <search string="Mes">
                    <group expand="0" string="Mes">
                        <filter string="Fecha" name="create_date" context="{'group_by' : 'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="invoice_lines_partner_tree" model="ir.ui.view">
            <field name="name">invoice.lines.partner.tree</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
                <tree readonly="1" create="false" edit="false">
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="quantity" sum="Total Unidades"/>
                    <field name="price_unit" sum="Total Precio"/>
                    <field name="create_date" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="action_invoice_lines_partner" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">account.invoice.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="invoice_lines_partner_tree"/>
            <field name="search_view_id" ref="invoice_line_custom_search"/>
            <field name="context">{'group_by': 'create_date'}</field>
        </record>


    </data>
</openerp>